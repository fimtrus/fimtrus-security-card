<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Card TextView -->
    <style name="style_card_textview">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">@dimen/card_item_height</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#F9F9F9</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Card EditText -->
    <style name="style_card_edittext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/card_item_height</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#222222</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ems">10</item>
        <item name="android:maxLength">4</item>
        <item name="android:text"></item>
        
    </style>
    <!-- Card TableRow -->
    <style name="style_card_tablerow">
        
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#F9F9F9</item>
        <item name="android:paddingBottom">1dp</item>
    </style>
    
    <style name="dialog" parent="android:Theme.Dialog">
        <item name="android:background">@color/transparent</item>
    </style>

</resources>
